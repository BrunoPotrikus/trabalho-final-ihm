@inherits LayoutComponentBase

@inject NavigationManager NavManager

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudNavMenu Style="background-color: ghostwhite; padding: 2px; position: fixed; width: 100%" Class="d-flex">

    <MudButton 
        StartIcon="@Icons.Material.Filled.Login" 
        Style="background-color: dodgerblue; color: white; width: 150px; height: 50px; margin-top: 12px; margin-left: 10px;" 
        Size="Size.Small">
        Login
    </MudButton>

    <MudSpacer />

    <MudList Class="d-flex justify-center">

        <MudListItem>
            <MudButton 
                StartIcon="@Icons.Material.Filled.Home" 
                Style="background-color: ghostwhite; color: dodgerblue;"
                OnClick="@(() => NavManager.NavigateTo("/"))">
                Home
            </MudButton>
        </MudListItem>

        <MudListItem>
            <MudButton 
                StartIcon="@Icons.Material.Filled.InsertChartOutlined" 
                Style="background-color: ghostwhite; color: dodgerblue;"
                OnClick="@(() => NavManager.NavigateTo("/informacoes"))">
                Informações
            </MudButton>
        </MudListItem>

        <MudListItem>
            <MudButton 
                StartIcon="@Icons.Material.Filled.Contacts" 
                Style="background-color: ghostwhite; color: dodgerblue;"
                OnClick="@(() => NavManager.NavigateTo("/sobre"))">
                Sobre
            </MudButton>
        </MudListItem>

    </MudList>

</MudNavMenu>

<MudMainContent>

    <MudGrid Class="mt-10"/>

    @Body

</MudMainContent>
